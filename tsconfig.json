{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "navigation/*": [
        "./src/navigation/*"
      ],
      "context/*": [
        "./src/context/*"
      ],
      "screens/*": [
        "./src/screens/*"
      ],
      "theme/*": [
        "./theme/*"
      ],
      "@/*": [
        "./*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "api/*": [
        "./src/api/*"
      ]
    },
    "jsx": "react-native",
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Added to include JavaScript files
    "**/*.jsx", // Added to include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}